<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
  <dict>
    <key>Label</key>
    <string>sh.wallace.scott.clonedrive</string>

    <key>WorkingDirectory</key>
    <string>/path/to/clonedrive</string>

    <key>ProgramArguments</key>
    <array>
      <string>/path/to/python</string>
      <string>clonedrive.py</string>
    </array>

    <key>RunAtLoad</key>
    <true/>

    <key>KeepAlive</key>
    <true/>

    <key>StandardErrorPath</key>
    <string>clonedrive.log</string>
  </dict>
</plist>
